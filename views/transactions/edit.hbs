<section class="container">
    <h2>{{title}}</h2>

    {{#if error}}
    <div class="alert alert-danger">
        {{error}}
    </div>
    {{/if}}

    <form action="/transactions/{{transaction._id}}/edit" method="POST">
        <!-- User field is hidden since it's typically not user-editable -->
        <input type="hidden" name="user" value="{{transaction.user}}">

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <input type="text" class="form-control" id="description" name="description"
                value="{{transaction.description}}" required>
        </div>

        <div class="mb-3">
            <label for="amount" class="form-label">Amount</label>
            <input type="number" class="form-control" id="amount" name="amount" value="{{transaction.amount}}" required>
        </div>

        <div class="mb-3">
            <label for="category" class="form-label">Category</label>
            <select class="form-control" id="category" name="category" required>
                <option value="Income" {{#ifEquals transaction.category "Income" }}selected{{/ifEquals}}>Income</option>
                <option value="Expense" {{#ifEquals transaction.category "Expense" }}selected{{/ifEquals}}>Expense
                </option>
            </select>
        </div>

        <div class="mb-3">
            <label for="date" class="form-label">Date</label>
            <input type="date" class="form-control" id="date" name="date" value="{{transaction.formattedDate}}" required>
        </div>

        <button type="submit" class="btn btn-primary">Update Transaction</button>
        <a href="/transactions/view" class="btn btn-secondary">Cancel</a>
    </form>
</section>